<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment1_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_with_hens"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calculatorTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Chicken Feed\n Calculator\n"

                android:textColor="#fff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/farmer_guideTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="A Farmer's Guide\nTo A Healthy Flocks"
                android:textColor="#fff"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/fragment1_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_without_hens"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.3">

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/create_diet_style"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_dietTV"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="My Diet"
                        android:textColor="#BF2604"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/listLL"

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ListView

                        android:id="@+id/addingra_list"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:dividerHeight="0dp">

                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addingrad"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/add_ingredientTV1"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/border_corners"
                        android:gravity="center"
                        android:text="Add Ingredient"
                        android:textColor="#BF2604"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.2" />

                    <Button

                        android:id="@+id/calculate"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_border"

                        android:text="Calculate"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.3">

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment1_3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_without_hens"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="0sp"
                android:layout_marginTop="0sp"
                android:orientation="vertical"
                android:paddingBottom="10sp"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:background="@drawable/main_tab_border"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pullet_tabTV"
                            android:layout_width="fill_parent"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:background="@drawable/pullet_button"
                            android:gravity="center"
                            android:text="Pullet"
                            android:textColor="#E98F3E" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/laying_tabTV"
                            android:layout_width="fill_parent"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Laying Hen"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/boiler_tabTV"
                            android:layout_width="fill_parent"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Broiler"
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pulletLL"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/pullet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.1"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pullet_titleTV"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Pullet Nutritional Guide"
                            android:textColor="#592202"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="20sp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/starterTV"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:lineSpacingExtra="2sp"
                                    android:text="Starter"
                                    android:textColor="#592202"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; 18-21% protein"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />

                                <TextView
                                    android:id="@+id/text1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; 2800-3000 kcal/kg"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; 0.90-1.10% Ca"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />

                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; 0.40-0.55% AvP"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />

                                <TextView
                                    android:id="@+id/text4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; Ca:P Ratio = 1.8-2.3"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />

                                <TextView
                                    android:id="@+id/text5"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; Met = 0.40% minimum"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />

                                <TextView
                                    android:id="@+id/text6"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; Lys = 1% minimum"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />

                                <TextView
                                    android:id="@+id/text7"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:text="&#981; Fiber = 8% maximum"
                                    android:textColor="#EF9343"
                                    android:textSize="8dip" />


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="20sp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/growerTV"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal"
                                        android:lineSpacingExtra="2sp"
                                        android:text="Grower"
                                        android:textColor="#592202"
                                        android:textSize="11sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text11"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; 16-19% protein"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />

                                    <TextView
                                        android:id="@+id/text12"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; 2700-3000 kcal/kg"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />

                                    <TextView
                                        android:id="@+id/text13"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; 85-1.05% Ca"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />

                                    <TextView
                                        android:id="@+id/text14"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; 0.35-0.5% AvP"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />

                                    <TextView
                                        android:id="@+id/text15"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; Ca:P Ratio = 1.8-2.3"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />

                                    <TextView
                                        android:id="@+id/text16"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; Met = 0.35% minimum"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />

                                    <TextView
                                        android:id="@+id/text17"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; Lys = 0.75% minimum"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />

                                    <TextView
                                        android:id="@+id/text18"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="&#981; Fiber = 10% maximum"
                                        android:textColor="#EF9343"
                                        android:textSize="8dip" />


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4">

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menuLL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/ingrad_libTV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Ingredients\nLibrary"
                android:textColor="#BF2604"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/createLL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/diet_list_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/footer_icon2" />

            <TextView
                android:id="@+id/create_mydietTV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Create\nMy Diet"
                android:textColor="#BF2604"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nutrientLL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nutrient_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/footer_icon3" />

            <TextView
                android:id="@+id/nutrient_classTV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Nutrient\nClass"
                android:textColor="#BF2604"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>