<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"

        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/back_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:text="&#xf104;"
                android:textColor="#b51d04"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/creat_dietTV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="Create My Diet"
                android:textColor="#b51d04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/reset_btn"

                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:background="#fff"
                android:gravity="center"
                android:text="RESET"
                android:textColor="#b51d04" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/slidingmenu_bg">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    android:paddingBottom="10sp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1.1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/toggleTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:text="Toggle to switch views"
                                                android:textColor="#fff"

                                                android:textSize="8sp" />


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1.5"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="20sp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginRight="10sp"
                                                android:gravity="center_vertical"
                                                android:src="@drawable/circle_small"

                                                />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1.9"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"></LinearLayout>

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <ToggleButton
                                                android:id="@+id/toggle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/toggle_piechar_style"
                                                android:textOff=""
                                                android:textOn="" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_gravity="center"
                                            android:layout_weight="1.4"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/sqsuare" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/addtodiet_btn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/button_border"
                                android:gravity="center"
                                android:padding="8dp"

                                android:text="Add To Diet"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.2">


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/diet_background"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_hen1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="70sp"
                        android:layout_weight="1"></LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="70sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="70sp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.85"
                                android:background="@drawable/kl"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/title_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"

                                    android:layout_gravity="center"
                                    android:gravity="center"

                                    android:padding="5dp"

                                    android:text="Wheat Bran"
                                    android:textColor="#b51d04"
                                    android:textSize="8sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/klTV"
                                    android:layout_width="60dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/kl"

                                    android:gravity="center"
                                    android:text="0 kl"
                                    android:textColor="#b51d04"
                                    android:textSize="8sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"

                        android:layout_marginTop="16sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/left_moveLL"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center|right"

                            android:layout_weight="0.9"
                            android:gravity="center|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/leftarw"
                                android:layout_width="wrap_content"

                                android:layout_height="fill_parent"
                                android:layout_alignLeft="@+id/leftTV"
                                android:layout_gravity="center|right"
                                android:gravity="center|right"
                                android:text="&#xf104;"
                                android:textColor="#b51d04"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/leftTV"

                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center|right"
                                android:gravity="center|right"
                                android:text="Maize"
                                android:textColor="#b51d04"

                                android:textSize="5sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="202dp"
                            android:layout_height="202dp">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:paddingBottom="30sp"
                                android:src="@drawable/circle" />

                            <RelativeLayout

                                android:id="@+id/mainLayout"
                                android:layout_width="202dp"
                                android:layout_height="202dp"
                                android:gravity="center"
                                android:padding="2sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/right_moveLL"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center|left"

                            android:layout_weight="0.9"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/rightTV"

                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center|left"
                                android:gravity="center|left"
                                android:text="Corn"
                                android:textColor="#b51d04"

                                android:textSize="5sp" />

                            <TextView
                                android:id="@+id/rightarw"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignRight="@+id/rightTV"

                                android:layout_gravity="center|left"
                                android:gravity="center|left"
                                android:text="&#xf105;"
                                android:textColor="#b51d04"
                                android:textSize="15dp" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.8"></LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2.9"
                android:background="@drawable/footer_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/menuLL"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/menu_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:src="@drawable/menu" />

                        <TextView
                            android:id="@+id/ingrad_libTV"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Ingredients\nLibrary"
                            android:textColor="#BF2604"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/creatdietLL"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/diet_list_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center"
                            android:src="@drawable/footer_icon2" />

                        <TextView
                            android:id="@+id/create_mydietTV"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2sp"
                            android:gravity="center"
                            android:text="Create\nMy Diet"
                            android:textColor="#BF2604"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nutrientLL"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/nutrient_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:src="@drawable/footer_icon3" />

                        <TextView
                            android:id="@+id/nutrient_classTV"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Nutrient\nClass"
                            android:textColor="#BF2604"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>