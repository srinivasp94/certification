<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow3"

    >
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/cancel"
        android:layout_gravity="right"
        android:id="@+id/cancel_ant"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/hname"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_name"
            android:text="John Doe"
            android:textColor="@color/tab_indicator"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/specialization"
            android:text="Cardiologist"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/hint"
            android:textSize="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hname"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/hospital"/>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/hos_name"
            android:text="Yashoda Hospital"
            android:textColor="@color/light_black"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            />
            <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/hos_place"
            android:text="Malakpet"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/light_black"
            android:textSize="11sp"
            />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/clnder"/>
        <LinearLayout
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="15-02-2017"
            android:textColor="@color/light_black"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text="10:00 AM"
                android:textColor="@color/light_black"
                android:textSize="11sp"
                android:layout_marginLeft="2dp"

                />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>