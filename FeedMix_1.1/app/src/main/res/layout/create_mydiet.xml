<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:gravity="center"

        android:background="#fff">
        <LinearLayout

            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/back_btn"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="#b51d04"
                android:text="&#xf104;"
                android:textSize="35dp"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView

                android:id="@+id/creat_dietTV"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#b51d04"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Create My Diet"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/reset_btn"

                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff"
                android:textColor="#b51d04"
                android:text="RESET"/>


        </LinearLayout>
    </LinearLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/slidingmenu_bg"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingRight="20sp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    android:paddingBottom="10sp"
                   >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="vertical"
                                    android:layout_weight="1.1"
                                    >
                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="horizontal"
                                        android:layout_weight="1"
                                        >
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            >
                                            <TextView
                                                android:id="@+id/toggleTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:text="Toggle to switch views"
                                                android:textSize="8sp"

                                                android:textColor="#fff"/>


                                        </LinearLayout>

                                        </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    >
                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="horizontal"
                                        android:layout_weight="1"
                                        >
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:layout_weight="1.5"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center_vertical"
                                            >
                                            <ImageView
                                                android:layout_width="20sp"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/circle_small"
                                                android:gravity="center_vertical"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginRight="10sp"

                                                />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:layout_weight="1.9"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center_vertical"
                                            >
                                            </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:layout_weight="1"
                                            >
                                            <ToggleButton
                                                android:id="@+id/toggle"
                                                android:textOff=""
                                                android:textOn=""
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/toggle_piechar_style"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_weight="1.4"
                                            >
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/sqsuare"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <Button
                                android:id="@+id/addtodiet_btn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                            android:text="Add To Diet"
                                android:padding="8dp"

                            android:textColor="#fff"
                                android:background="@drawable/button_border"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1.2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/diet_background"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_hen1">

                   <LinearLayout
                       android:layout_width="fill_parent"
                       android:layout_height="70sp"
                       android:layout_weight="1"></LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="70sp"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="70sp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center">

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:layout_weight="0.85"
                                android:layout_gravity="center"
                                android:background="@drawable/kl"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/title_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"

                                    android:text="Wheat Bran"
                                   android:padding="5dp"

                                    android:textSize="8sp"

                                    android:textColor="#b51d04"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/klTV"
                                    android:layout_width="60dp"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/kl"
                                    android:text="0 kl"

                                    android:textColor="#b51d04"
                                    android:textSize="8sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="16sp">
                        <LinearLayout
                            android:id="@+id/left_moveLL"
                            android:layout_weight="0.9"
                            android:layout_gravity="center|right"
                            android:gravity="center|right"

                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <TextView
                                android:layout_alignLeft="@+id/leftTV"
                                android:id="@+id/leftarw"

                                android:text="&#xf104;"
                                android:textSize="15dp"
                                android:layout_gravity="center|right"
                                android:gravity="center|right"
                                android:textColor="#b51d04"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent" />
                            <TextView
                                android:id="@+id/leftTV"

                                android:layout_gravity="center|right"
                                android:gravity="center|right"
                                android:textSize="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="Maize"

                                android:textColor="#b51d04"/>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="202dp"
                            android:layout_height="202dp">
                            <ImageView
                                android:layout_width="fill_parent"
                                android:src="@drawable/circle"
                                android:paddingBottom="30sp"
                                android:layout_height="fill_parent" />
                                <RelativeLayout

                                    android:gravity="center"
                                    android:id="@+id/mainLayout"
                                    android:padding="2sp"
                                    android:layout_width="202dp"
                                    android:layout_height="202dp" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/right_moveLL"
                            android:layout_weight="0.9"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"

                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:id="@+id/rightTV"

                                android:layout_gravity="center|left"
                                android:gravity="center|left"
                                android:textSize="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="Corn"

                                android:textColor="#b51d04"/>
                            <TextView
                                android:id="@+id/rightarw"
                               android:layout_alignRight="@+id/rightTV"
                                android:text="&#xf105;"
                                android:textSize="15dp"

                                android:layout_gravity="center|left"
                                android:gravity="center|left"
                                android:textColor="#b51d04"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3.8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="2.9"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/footer_bg">
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:id="@+id/menuLL"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/menu_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/menu"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/ingrad_libTV"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Ingredients\nLibrary"
                            android:textColor="#BF2604"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/creatdietLL"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/diet_list_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/footer_icon2"

                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/create_mydietTV"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Create\nMy Diet"
                            android:textColor="#BF2604"
                            android:textSize="15dp"
                          android:layout_marginBottom="2sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nutrientLL"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/nutrient_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/footer_icon3"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/nutrient_classTV"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Nutrient\nClass"
                            android:textColor="#BF2604"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>