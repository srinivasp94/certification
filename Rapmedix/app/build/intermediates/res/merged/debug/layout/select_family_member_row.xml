<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

    <TextView
        android:id="@+id/family_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Maneesh"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/family_row_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/family_row_name"
        android:text="Maneesh"
        android:textColor="#2a2a2a"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/dummyImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/family_row_name"
        android:layout_marginLeft="10dp"
        android:src="@drawable/mobile"/>

    <TextView
        android:id="@+id/family_row_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/family_row_relation"
        android:layout_toRightOf="@+id/dummyImage"
        android:text="Maneesh"
        android:textColor="#2a2a2a"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <RadioButton
        android:id="@+id/family_row_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/relativelayout"
        />


</RelativeLayout>
