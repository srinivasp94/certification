<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/alert_style2"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="300dp"
    android:layout_height="230dp">
    <LinearLayout
        android:layout_margin="3sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/ugared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Select Type"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/starterLL"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/starter"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starter"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/growerLL"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/grower"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grower"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/finisherLL"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/finisher"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finisher"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cancelLL"
        android:layout_margin="5sp"
        android:layout_weight="0.99"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cancel"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
</LinearLayout>