    <LinearLayout
        android:layout_weight="0.6"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <ListView
                android:id="@+id/diet_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null"

                android:dividerHeight="0dp">

            </ListView>
            <LinearLayout

                android:id="@+id/headerView"
                android:orientation="horizontal"
                android:background="#00000000"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_width="fill_parent"
                android:layout_height="60dp">
                <TextView
                    android:layout_weight="1.05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


                <Button
                    android:layout_weight="1"
                    android:id="@+id/add_diet_btn"
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Add To Diet "
                    android:background="@drawable/addto_diet_style"
                    android:textColor="#fff"
                    />
                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_weight="1.2"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/add_to_diet"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="RESET"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.05"
        android:orientation="vertical"
        android:background="@drawable/footer_bg"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/menuLL"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/menu_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/ingrad_libTV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Ingredients\nLibrary"
                    android:textColor="#BF2604"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createLL"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/diet_list_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/footer_icon2"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/create_mydietTV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Create\nMy Diet"
                    android:textColor="#BF2604"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nutrientLL"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/nutrient_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/footer_icon3"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/nutrient_classTV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Nutrient\nClass"
                    android:textColor="#BF2604"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

