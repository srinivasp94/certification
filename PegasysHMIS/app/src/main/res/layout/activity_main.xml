<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pegasys.pegasyshmis.MainActivity">


    <Button
        android:id="@+id/desk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bgr"
        android:gravity="center"
        android:text="doctors dESK"
        android:textSize="18dp" />

    <Button
        android:id="@+id/provisional"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bgr"
        android:gravity="center"
        android:text="Provisional Registration"
        android:textSize="18dp" />

    <Button
        android:id="@+id/invesatigation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/provisional"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgr"
        android:gravity="center"
        android:padding="4dp"
        android:text="investigation"
        android:textSize="18dp" />


</RelativeLayout>
