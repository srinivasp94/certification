    <RelativeLayout
        android:layout_weight="0.6"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <ListView
            android:id="@+id/diet_list"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="100dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
           android:choiceMode="singleChoice"
            android:dividerHeight="0dp">

        </ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            >
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:layout_weight="1.1"
                            >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/toggleTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:text="Toggle to switch views"
                                        android:textSize="8sp"

                                        android:textColor="#fff"/>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                >
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    >
                                    <ImageView
                                        android:visibility="gone"
                                        android:layout_width="20sp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/circle_small"
                                        android:gravity="center_vertical"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="10sp"

                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal"
                                    android:layout_weight="1.9"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    >
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    >
                                    <ToggleButton
                                        android:visibility="gone"
                                        android:id="@+id/toggle"
                                        android:textOff=""
                                        android:textOn=""
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/toggle_button_bg_style"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_weight="1.4"
                                    >
                                    <ImageView
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/sqsuare"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/addtodiet_btn"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Add To Diet"
                        android:textColor="#fff"
                        android:background="@drawable/button_border"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.05"
           android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/footer_bg"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="125dp">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"

                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:id="@+id/menuLL"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/menu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/menu"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/ingrad_libTV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingredients\nLibrary"
                        android:textColor="#BF2604"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createLL"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/diet_list_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/footer_icon2"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/create_mydietTV"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Create\nMy Diet"
                        android:textColor="#BF2604"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/nutrientLL"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/nutrient_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/footer_icon3"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/nutrient_classTV"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Nutrient\nClass"
                        android:textColor="#BF2604"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>

