<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tiqs.rapmedix.Login_page"
    android:background="@color/white"
    android:id="@+id/root_view">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:id="@+id/Vendor_Name"
                android:layout_marginRight="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Vendor Name"
                android:textSize="15sp"
                android:textColor="@color/black"/>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shadow2"
                android:gravity="center">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/login_icon_back">

                    <ImageView
                        android:id="@+id/topic_grid"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/people"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <AutoCompleteTextView
                    android:id="@+id/name_input"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:hint="Partners ID"
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/mobile"
                android:layout_marginTop="15dp"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shadow2"
                android:gravity="center">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/login_icon_back">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/kit"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <AutoCompleteTextView
                    android:textSize="14sp"
                    android:id="@+id/kid_id"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:hint="Kit ID"
                    />

            </LinearLayout>
                <Button
                    android:layout_marginRight="20dp"
                    android:id="@+id/submit"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="right"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="SUBMIT"
                    android:background="@drawable/button_shape"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:id="@+id/details_page"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                    android:padding="7dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shadow2"
                    android:gravity="center">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/login_icon_back">

                        <ImageView
                            android:id="@+id/topic_gridd"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/email"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                    <AutoCompleteTextView
                        android:id="@+id/name_inputt"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:hint="Name"
                        android:textSize="14sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:padding="7dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shadow2"
                    android:gravity="center">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/login_icon_back">

                        <ImageView
                            android:id="@+id/mob_icn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/email"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                    <AutoCompleteTextView
                        android:id="@+id/mobile_input"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:hint="Mobile Number"
                        android:textSize="14sp"
                        android:inputType="number"
                        />

                </LinearLayout>
                <LinearLayout
                android:visibility="visible"
                android:id="@+id/email"
                android:layout_marginTop="15dp"
                android:padding="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shadow2"
                android:gravity="center">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/login_icon_back">

                    <ImageView
                        android:id="@+id/mobile_number"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/email"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/email_input"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:hint="Email (Optional)"

                    />

            </LinearLayout>

                    <Button
                        android:id="@+id/submit_2"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="right"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/white"/>

        </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/Login"
                        android:layout_marginRight="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Login"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
</RelativeLayout>
